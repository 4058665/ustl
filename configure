#! /bin/bash
#
# This file is part of bsconf - a configure replacement.
# Copyright (C) 2005 by Mike Sharov <msharov@talentg.com>
# This file is free software, distributed under the MIT License.
#

if [ -z "${CC}" ]; then
    IFS="${IFS}:"
    for i in gcc g++ cc c++ c89 c99; do
	for dir in ${PATH}; do
	    if [ -x "$dir/$i" ]; then
		export CC=$i;
		break;
	    fi;
	done;
	if [ ! -z "${CC}" ]; then
	    break;
	fi;
    done
    if [ -z "${CC}" ]; then
	echo "Please set the CC environment variable to your C compiler";
	exit;
    fi
fi
STDDEFPATH=`find /usr/lib/gcc* -name stddef.h 2> /dev/null | head -n 1`
if [ ! -z ${STDDEFPATH} ]; then
    GINCDIR=`dirname ${STDDEFPATH}`
    GLIBDIR=`dirname ${GINCDIR}`
    GCCINCDIR="--gccincludedir=${GINCDIR}"
    GCCLIBDIR="--gcclibdir=${GLIBDIR}"
fi

if [ ! -x bsconf ]; then
    ${CC} -o bsconf bsconf.c
fi
if [ -x bsconf ]; then
    ./bsconf ${GCCINCDIR} ${GCCLIBDIR} $*;
else
    echo "Build of the configurator program failed. Ensure you have an ANSI C compiler.";
fi

