LIBNAME		= @LIBNAME@
@BUILD_SHARED_LIBRARIES@

CC		= @CC@ 
CXX		= @CXX@ 
LD		= @CXX@ 
AR		= @AR@
RANLIB		= @RANLIB@
DOXYGEN		= @DOXYGEN@
INSTALL		= @INSTALL@
RM		= @RM@
LN		= @LN@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
BINDIR		= @bindir@
INCDIR		= @includedir@
LIBDIR		= @libdir@

INSTALLDIR	= ${INSTALL} -d
INSTALLLIB	= ${INSTALL} -p -m 644
INSTALLEXE	= ${INSTALL} -p -m 755
INSTALLDATA	= ${INSTALL} -p -m 644

CWARNOPTS	= -Werror -Wall -W -Winline -Wpointer-arith -Wno-cast-align \
		-Wcast-qual -Wwrite-strings -Wshadow -Wredundant-decls @SYSWARNS@
CXXWARNOPTS	= ${CWARNOPTS} -Wconversion -Wsign-promo -Wsynth -Woverloaded-virtual

OPTIMIZE	= -DNDEBUG=1 -fomit-frame-pointer
#DEBUG		= 1
#STANDALONE	= -nodefaultlibs

ifdef DEBUG
    CFLAGS	= -ggdb3 ${CWARNOPTS} ${STANDALONE}
    CXXFLAGS	= -ggdb3 ${CXXWARNOPTS} ${STANDALONE}
    LDFLAGS	= ${STANDALONE}
else
    CFLAGS	= @CFLAGS@ ${CWARNOPTS} ${OPTIMIZE} ${STANDALONE}
    CXXFLAGS	= @CXXFLAGS@ ${CXXWARNOPTS} ${OPTIMIZE} ${STANDALONE}
    LDFLAGS	= -s ${STANDALONE}
endif
ifdef STANDALONE
    LIBS	+= @libsupc++@ @libgcc@ @libgcc_eh@ @libc@
endif
SHBLDFL		= @SHBLDFL@

LIBA		= lib${LIBNAME}.a
LIBSO		= lib${LIBNAME}.so
ifdef MAJOR
LIBSOLNK	= ${LIBSO}.${MAJOR}
LIBSOBLD	= ${LIBSO}.${MAJOR}.${MINOR}.${BUILD}
endif
TOCLEAN		+= ${LIBSO} ${LIBA} ${LIBSOBLD}

