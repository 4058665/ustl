CC		= @CC@
CXX		= @CXX@
LD		= @CXX@
AR		= @AR@
RANLIB		= @RANLIB@
DOXYGEN		= @DOXYGEN@
INSTALL		= @INSTALL@
RM		= @RM@
LN		= @LN@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
BINDIR		= ${prefix}/bin
INCDIR		= ${prefix}/include
LIBDIR		= ${exec_prefix}/lib

INSTALLDIR	= ${INSTALL} -C -d
INSTALLLIB	= ${INSTALL} -p -C -m 644
INSTALLEXE	= ${INSTALL} -p -C -m 755
INSTALLDATA	= ${INSTALL} -p -C -m 644

CWARNOPTS	= -Werror -Wall -W -Winline -Wpointer-arith -Wcast-qual \
		-Wno-cast-align -Wwrite-strings -Wmissing-prototypes \
		-Wconversion -Wshadow -Wredundant-decls
CXXWARNOPTS	= ${CWARNOPTS} -Wsign-promo -Weffc++ -Wsynth -Woverloaded-virtual
OPTIMIZE	= -DNDEBUG=1 -fomit-frame-pointer -fmerge-all-constants
#DEBUG		= 1
ifdef DEBUG
    CFLAGS	= -ggdb3 ${CWARNOPTS}
    CXXFLAGS	= -ggdb3 ${CXXWARNOPTS}
    LDFLAGS	=
else
    CFLAGS	= @CFLAGS@ ${CWARNOPTS} ${OPTIMIZE}
    CXXFLAGS	= @CXXFLAGS@ ${CXXWARNOPTS} ${OPTIMIZE}
    LDFLAGS	= -s
endif

