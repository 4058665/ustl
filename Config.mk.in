LIBNAME		= @LIBNAME@
MAJOR		= @LIB_MAJOR@
MINOR		= @LIB_MINOR@
BUILD		= @LIB_BUILD@

CC		= @CC@ 
CXX		= @CXX@ 
LD		= @CXX@ 
AR		= @AR@
RANLIB		= @RANLIB@
DOXYGEN		= @DOXYGEN@
INSTALL		= @INSTALL@
RM		= @RM@
LN		= @LN@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
BINDIR		= @bindir@
INCDIR		= @includedir@
LIBDIR		= @libdir@

INSTALLDIR	= ${INSTALL} -d
INSTALLLIB	= ${INSTALL} -p -m 644
INSTALLEXE	= ${INSTALL} -p -m 755
INSTALLDATA	= ${INSTALL} -p -m 644

CWARNOPTS	= -Werror -Wall -W -Winline -Wpointer-arith -Wno-cast-align \
		-Wcast-qual -Wwrite-strings -Wshadow -Wredundant-decls @SYSWARNS@
CXXWARNOPTS	= ${CWARNOPTS} -Wconversion -Wsign-promo -Wsynth -Woverloaded-virtual
#MMXOPTS	=

#BUILD_SHARED	= 1
#BUILD_STATIC	= 1
#DEBUG		= 1
#STANDALONE	= -nodefaultlibs

ifdef DEBUG
    CFLAGS	= @CFLAGS@ -O0 -ggdb3
    CXXFLAGS	= @CFLAGS@ -O0 -ggdb3
    LDFLAGS	= ${STANDALONE}
else
    CFLAGS	= -O3 -DNDEBUG=1 @CFLAGS@
    CXXFLAGS	= -O3 -DNDEBUG=1 @CXXFLAGS@
    LDFLAGS	= -s ${STANDALONE}
endif
CFLAGS		+= ${MMXOPTS} ${CWARNOPTS} ${STANDALONE}
CXXFLAGS	+= ${MMXOPTS} ${CWARNOPTS} ${STANDALONE}
ifdef STANDALONE
    LIBS	+= @libsupc++@ @libgcc@ @libgcc_eh@ @libc@
endif
SHBLDFL		= @SHBLDFL@

LIBA		= lib${LIBNAME}.a
LIBSO		= lib${LIBNAME}.so
ifdef MAJOR
LIBSOLNK	= ${LIBSO}.${MAJOR}
LIBSOBLD	= ${LIBSO}.${MAJOR}.${MINOR}.${BUILD}
endif
TOCLEAN		+= ${LIBSO} ${LIBA} ${LIBSOBLD}

