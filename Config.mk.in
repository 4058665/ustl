CC		= @CC@
CXX		= @CXX@
LD		= @CXX@
AR		= @AR@
RANLIB		= @RANLIB@
DOXYGEN		= @DOXYGEN@
INSTALL		= @INSTALL@
RM		= @RM@
LN		= @LN@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
BINDIR		= ${prefix}/bin
INCDIR		= ${prefix}/include
LIBDIR		= ${exec_prefix}/lib

INSTALLDIR	= ${INSTALL} -C -d
INSTALLLIB	= ${INSTALL} -p -C -m 644
INSTALLEXE	= ${INSTALL} -p -C -m 755
INSTALLDATA	= ${INSTALL} -p -C -m 644

CWARNOPTS	= -ansi -Werror -Wall -W -Winline -Wpointer-arith -Wcast-qual \
		-Wno-cast-align -Wwrite-strings -Wmissing-prototypes \
		-Wconversion -Wshadow -Wredundant-decls -pedantic-errors
CXXWARNOPTS	= ${CWARNOPTS} -Wsign-promo -Weffc++ -Wsynth -Woverloaded-virtual
OPTIMIZE	= -DNDEBUG=1 -frepo -fomit-frame-pointer -fmerge-all-constants
DEBUG		= 1
ifdef DEBUG
    CFLAGS	= -ggdb3 ${CWARNOPTS} -I ${INCDIR}
    CXXFLAGS	= -ggdb3 -fno-rtti ${CXXWARNOPTS} -I ${INCDIR}
    LDFLAGS	= -L ${LIBDIR}
else
    CFLAGS	= @CFLAGS@ ${CWARNOPTS} ${OPTIMIZE} -I ${INCDIR}
    CXXFLAGS	= @CXXFLAGS@ -fno-rtti ${CXXWARNOPTS} ${OPTIMIZE} -I ${INCDIR}
    LDFLAGS	= -s -L ${LIBDIR}
endif

